{
  "manifest_version": 3,
  "name": "AutoFocus â€“ Dopamine Loop Breaker",
  "version": "0.1",
  "description": "A Chrome extension that helps you stay focused by blocking distractions during work sessions",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "webRequest",
    "alarms",
    "notifications",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "AutoFocus"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-nudge.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}